@page
@model WebApp.Pages.Compra.GridModel
@{
}


<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Compra
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>Fecha de Compra</th>
                                <th>Monto</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                                <th>Observaciones</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdCompra</td>
                                <td>@item.Cliente.NombreCompleto</td>
                                <td>@item.Producto.Descripcion</td>
                                <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                                <td>@item.Monto</td>
                                <td>@item.Impuesto</td>
                                <td>@item.Total</td>
                                <td>@item.Observaciones</td>
                                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCompra"><i class='bx bx-edit-alt'></i></a>

                                    <button type="button" class="btn btn-danger" onclick="CompraGrid.OnClickEliminar(@item.IdCompra)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>}
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{



    <script defer src="~/App/Compra/Grid.js"></script>

}
