@page
@model WebApp.Pages.Compra.EditModel
@{
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar" : "Nuevo Cliente")
        </div>
        <div class="card-body">
            <form id="FormEdit">
                <input type="hidden" asp-for="Entity.IdCompra" v-model="Entity.IdCompra" />

                <div class="form-group mb-3">
                    <label for="Entity.ClientesId" class="form-label">Cliente</label>

                    <select asp-for="Entity.ClientesId" class="form-select"
                            v-model="Entity.ClientesId" asp-items="@(new SelectList(Model.ClientesLista, "ClientesId", "NombreCompleto"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.ProductoId" class="form-label">Producto</label>

                    <select asp-for="Entity.ProductoId" class="form-select"
                            v-model="Entity.ProductoId" asp-items="@(new SelectList(Model.ProductoLista, "ProductoId", "Descripcion"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.FechaCompra" class="form-label">Fecha de Compra </label>
                    <input type="date" class="form-control" asp-for="Entity.FechaCompra" v-model="Entity.FechaCompra" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Monto" class="form-label">Monto</label>
                    <input type="number" class="form-control" asp-for="Entity.Monto" v-model="Entity.Monto" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Observaciones" class="form-label">Observaciones</label>
                    <input type="text" class="form-control" asp-for="Entity.Observaciones" v-model="Entity.Observaciones" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="checkbox" class="form-check-input" asp-for="Entity.Estado" v-model="Entity.Estado">
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{

    <script defer src="~/App/Compra/Edit.js"></script>


}